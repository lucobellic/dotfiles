{
  "$schema": "https://opencode.ai/config.json",
  "theme": "ayugloom",
  "model": "github-copilot/claude-sonnet-4.5",
  "snapshot": false,
  "share": "disabled",
  "autoshare": false,
  "autoupdate": true,
  "keybinds": {
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "app_exit": "ctrl+c",
  },
  "permission": {
    "*": "allow",
    "doom_loop": "ask",
  },
  "mcp": {
    "brave-search": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@brave/brave-search-mcp-server",
        "--transport",
        "stdio",
      ],
      "environment": {
        "BRAVE_API_KEY": "{env:BRAVE_API_KEY}",
      },
    },
    "serena": {
      "type": "remote",
      "url": "http://localhost:8001/mcp",
      "enabled": false,
    },
  },
  "lsp": {
    "pyright": {
      "disabled": true,
    },
    "lua_ls": {
      "command": ["lua-language-server"],
      "extensions": [".lua"],
    },
    "clangd": {
      "command": [
        "clangd",
        "--background-index",
        "--background-index-priority=background",
        "--all-scopes-completion",
        "--pch-storage=memory",
        "--completion-style=detailed",
        "--clang-tidy",
        "--enable-config",
        "--header-insertion=iwyu",
        "--all-scopes-completion",
        "-j",
        "2",
      ],
      "extensions": [".c", ".cpp", ".ipp", ".h", ".hpp", ".cu", ".cuh"],
    },
    "ruff": {
      "command": ["ruff", "server", "--preview"],
      "extensions": [".py", ".pyi"],
    },
  },
}
